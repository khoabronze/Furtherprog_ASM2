<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.furtherprog_asm2.Role_Controller">
   <children>
      <VBox layoutY="1.0" prefHeight="500.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets left="50.0" top="30.0" />
               </VBox.margin>
               <image>
                  <Image url="@../../../IMG/Liberty-Mutual-Logo.png" />
               </image>
            </ImageView>
            <Button fx:id="adminLoginButton" onAction="#handleAdminLogin" maxWidth="150.0" mnemonicParsing="false" text="Login as Admin">
               <VBox.margin>
                  <Insets left="80.0" top="80.0" />
               </VBox.margin>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" height="23.0" offsetX="1.3" offsetY="1.3" radius="11.0" width="23.0" />
               </effect>
            </Button>
            <Button fx:id="customerLoginButton" onAction="#handleCustomerLogin" maxWidth="150.0" mnemonicParsing="false" text="Login as Customer">
               <VBox.margin>
                  <Insets left="80.0" top="60.0" />
               </VBox.margin>
               <effect>
                  <DropShadow height="23.0" offsetX="1.3" offsetY="1.3" radius="11.0" width="23.0" />
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
